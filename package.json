{
  "name": "@cypress/schema-tools",
  "version": "0.0.0-development",
  "description": "Validate, sanitize and document JSON schemas",
  "main": "dist",
  "types": "dist/index.d.ts",
  "scripts": {
    "prettier": "prettier --write 'src/**/*.ts'",
    "lint": "tslint --project .",
    "build": "tsc",
    "prebuild": "npm run deps && npm run prettier",
    "postbuild": "npm run check-transpiled-correctly",
    "check-transpiled-correctly": "node .",
    "deps": "deps-ok",
    "size": "npm pack --dry",
    "semantic-release": "semantic-release",
    "pretest": "npm run build",
    "test": "npm run unit",
    "unit": "ava-ts --verbose test/*-test.ts",
    "repl": "ts-node"
  },
  "keywords": [
    "schema",
    "json-schema",
    "utility"
  ],
  "author": "Gleb Bahmutov <gleb@cypress.io>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@bahmutov/all-paths": "1.0.2",
    "@bahmutov/is-my-json-valid": "2.17.3",
    "debug": "4.2.0",
    "json-stable-stringify": "1.0.1",
    "json2md": "1.6.3",
    "lodash.camelcase": "4.3.0",
    "lodash.get": "4.4.2",
    "lodash.reduce": "^4.6.0",
    "lodash.set": "4.3.2",
    "quote": "0.4.0",
    "ramda": "0.25.0",
    "@types/ramda": "0.25.47"
  },
  "devDependencies": {
    "@types/lodash.camelcase": "4.3.6",
    "@types/node": "9.6.61",
    "ava": "2.4.0",
    "ava-ts": "0.25.2",
    "common-tags": "1.8.0",
    "deps-ok": "1.4.1",
    "husky": "1.3.1",
    "jsen": "0.6.6",
    "prettier": "1.19.1",
    "semantic-release": "17.2.3",
    "terminal-banner": "1.1.0",
    "ts-node": "7.0.1",
    "tslint": "5.20.1",
    "typescript": "3.9.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cypress-io/schema-tools.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "break",
          "release": "major"
        }
      ]
    }
  }
}
